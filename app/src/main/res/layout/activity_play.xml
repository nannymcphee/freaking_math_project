<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e95105"
    tools:context="com.nhom5.freakingmathproject.Play"
    android:id="@+id/SceneGame">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TimeLine"
        android:indeterminate="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:id="@+id/textPoint"
        android:layout_below="@+id/TimeLine"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="99"
        android:id="@+id/num1"
        android:gravity="center"
        android:textSize="82sp"
        android:fontFamily="sans-serif-medium"
        android:layout_above="@+id/equals"
        android:layout_toStartOf="@+id/equals"
        android:textColor="#ecf0f1" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/plush"
        android:gravity="center"
        android:textSize="82sp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignTop="@+id/num1"
        android:layout_centerHorizontal="true"
        android:textColor="#ecf0f1" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="99"
        android:id="@+id/num2"
        android:gravity="center"
        android:textSize="82sp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignTop="@+id/plush"
        android:layout_toEndOf="@+id/plush"
        android:layout_marginStart="43dp"
        android:textColor="#ecf0f1" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/equals"
        android:gravity="center"
        android:textSize="82sp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/plush"
        android:textColor="#ecf0f1" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="99"
        android:id="@+id/txtResult"
        android:gravity="center"
        android:textSize="82sp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignTop="@+id/equals"
        android:layout_toEndOf="@+id/plush"
        android:textColor="#ecf0f1" />

    <ImageButton
        android:background="@null"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/truebtn"
        android:src="@drawable/true_123"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/falsebtn"
        android:src="@drawable/false_123"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/textViewScore"
        android:textColor="#6e3939"
        android:layout_below="@+id/num2"
        android:layout_toStartOf="@+id/textPoint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/textViewHighscore"
        android:textColor="#6e3939"
        android:layout_alignBottom="@+id/txtResult"
        android:layout_alignStart="@+id/textViewScore" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repayBtn"
        android:src="@drawable/play2"
        android:visibility="visible"
        android:layout_alignBottom="@+id/truebtn"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuBtn"
        android:src="@drawable/menu"
        android:visibility="visible"
        android:layout_alignTop="@+id/repayBtn"
        android:layout_alignEnd="@+id/falsebtn" />

    <ImageView
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewBoard"
        android:src="@drawable/gameover"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
